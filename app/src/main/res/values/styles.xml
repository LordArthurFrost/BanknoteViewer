<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->

    <style name="TextViewPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <style name="UKV_theme"
        parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">#080729</item>
        <item name="android:navigationBarColor">#080729</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="backgroundTint">#0A1469</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="lvtv">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewDialog">
        <item name="android:layout_gravity">left|center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_column">1</item>
    </style>

    <style name="DialogEditTextWhite">
        <item name="android:textColor">#ffffff</item>
        <item name="backgroundTint">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">phone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">2</item>
    </style>

    <style name="DialogSpinnerWhite">
        <item name="android:layout_gravity">left|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">2</item>
    </style>

</resources>